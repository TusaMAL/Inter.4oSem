@model DisciplineTeam.Area52.Web.Models.Usuario
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="col-lg-8 col-md-6 col-sm-6">
    <div id="bordapreta" class="thumbnail">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="../img/pp.jpg" alt="Chania">
                    <div class="carousel-caption">
                        <h3>Feature 1</h3>
                        <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="../img/gust.jpg" alt="Chania">
                    <div class="carousel-caption">
                        <h3>Feature 2</h3>
                        <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="../img/akhe.jpg" alt="Flower">
                    <div class="carousel-caption">
                        <h3>Feature 3</h3>
                        <p>Beatiful flowers in Kolymbari, Crete.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="../img/john.jpg" alt="Flower">
                    <div class="carousel-caption">
                        <h3>Flowers</h3>
                        <p>Beatiful flowers in Kolymbari, Crete.</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="col-lg-4 col-md-6 col-sm-6">
    <div id="bordapreta" class="well" style="background: white;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#login" id="cor-letra-verde" class="btn cor-letra-verde efeito-fade-navbar borda-botao-search" data-toggle="tab">Login</a></li>
            <li><a href="#create" id="cor-letra-verde" class="btn cor-letra-verde efeito-fade-navbar borda-botao-search" data-toggle="tab">Create Account</a></li>
        </ul>
        <div id="bordapreta myTabContent" class="tab-content">
            <div class="tab-pane active in" id="login">
                <form class="form-horizontal" action='../Cadastro/Index' method="POST">
                    <fieldset>
                        <div class="row">&nbsp;</div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="lblEmail">Email:</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="lblEmail" placeholder="Enter email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Password:</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="pwd" placeholder="Enter password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-offset-3 col-lg-6" for="pwd"><a href="">Forgot your password?</a></label>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-10">
                                <button id="cor-letra-verde" class="btn cor-letra-verde efeito-fade-navbar borda-botao-search" type="submit">Sign In</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="tab-pane fade" id="create">
                <form class="form-horizontal" action='../Cadastro/Create' method="POST">
                    <fieldset>
                        <div class="row">&nbsp;</div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="lblNome">Name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="lblNome" placeholder="Enter name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="lblNick">Nickname:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="lblNick" placeholder="Enter nickname">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="lblEmail">Email:</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="lblEmail" placeholder="Enter email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Password:</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="pwd" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-10">
                                <button id="cor-letra-verde" class="btn cor-letra-verde efeito-fade-navbar borda-botao-search" type="submit">Sign Up</button>
                                <button id="cor-letra-verde" class="btn cor-letra-verde efeito-fade-navbar borda-botao-search" type="submit">Clear</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>


