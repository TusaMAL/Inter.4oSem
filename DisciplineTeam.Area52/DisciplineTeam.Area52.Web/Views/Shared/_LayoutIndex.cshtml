<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Teste -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap Core CSS -->
    <link href="../Content/bootstrap.min.css" rel="stylesheet">
    <!-- Nosso CSS -->
    <link href="../Content/style.css" rel="stylesheet">
    <!-- Faz o slider funcionar-->
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 50%;
            margin: auto;
        }
    </style>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono" rel="stylesheet">
</head>
<body>
    <!--        Começo NavBAR        -->
    <nav class="navbar navbar-default navbar-static-top fixed-nav-bar">
        <div id="cor-fundo" class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">

                <a class="navbar-brand" href="../Usuario/Index"><img id="logoarea52" class="img-responsive" src="../img/area52.png" alt=""></a>

            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">

                    <li class=""><a href="#"><i class="cor-fonte-sem-efeito"></i> <span class="cor-fonte-sem-efeito">Disciplina Team</span></a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <!--    FimNavBAR    -->
    <!--Div's pra fazer o footer ficar sempre embaixo-->
    <div id="wrap">
        <div id="main" class="col-lg-12 col-sm-12 col-md-12">
            <!--Colunas lg 8/12, md 6/12 e sm 6/12-->
            <div class="col-lg-8 col-md-6 col-sm-6">
                <!--adiciona thumbnail e deixa a borda preta-->
                <div id="cor-borda" class="thumbnail">
                    <!-- começo do slider aqui nao sei oq nada faz-->
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="../img/pp.jpg" alt="Chania">
                                <div class="carousel-caption">
                                    <h3>Feature 1</h3>
                                    <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                                </div>
                            </div>

                            <div class="item">
                                <img src="../img/gust.jpg" alt="Chania">
                                <div class="carousel-caption">
                                    <h3>Feature 2</h3>
                                    <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                                </div>
                            </div>

                            <div class="item">
                                <img src="../img/akhe.jpg" alt="Flower">
                                <div class="carousel-caption">
                                    <h3>Feature 3</h3>
                                    <p>Beatiful flowers in Kolymbari, Crete.</p>
                                </div>
                            </div>

                            <div class="item">
                                <img src="../img/john.jpg" alt="Flower">
                                <div class="carousel-caption">
                                    <h3>Flowers</h3>
                                    <p>Beatiful flowers in Kolymbari, Crete.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div><!--Fim do Slider-->
                </div><!--./thumbnail-->
            </div><!--/.col-lg-8 col-md-6 col-sm-6-->
            @RenderBody()
        </div>
    </div>
    <!--./Div's pra fazer o footer ficar sempre embaixo-->
    <!-- Começo Footer -->
    <div id="footer">
        <!-- usado pra deixar a coluna para fixar o footer do tamanho da tela, se não usar as 3 colunas o navegador vai usar o
            padrão do container e dar uma encolhida no footer-->
        <div class="container col-lg-12 col-sm-12 col-md-12">
                <!-- adiciona o separador-->
                <hr id="borda-footer" />
                <ul class="nav nav-pills nav-justified">
                    <li><a id="cor-fonte-menu" href="#">© 2017 Disciplina Team</a></li>
                    @*<li><a id="cor-fonte-menu" href="#">Terms of Service</a></li>
                        <li><a id="cor-fonte-menu" href="#">Privacy</a></li>*@
                </ul>
                <div id="push"></div>
            </div><!-- /.col-lg-12 -->
    </div><!--    fim Footer    -->
    <!-- Bootstrap Core JavaScript -->
    <script src="../Scripts/jquery-1.10.2.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
</body>
</html>