@model DisciplineTeam.Area52.Web.Models.Usuario
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--btn cor-fonte efeito-fade-navbar borda-botao-search item-barra-set botao-barra tablink botao-settings-select-->

<div class="col-lg-offset-2 col-lg-8 col-sm-12 col-md-12 col-lg-offset-2">
    <div id="cor-borda" class="well" style="background: white">
        <ul id="efeito-form" class="nav nav-tabs">
            <li><a class="btn efeito-fade-navbar borda-botao-search" onclick="window.location = '../Usuario/Edit'" data-toggle="tab">Profile</a></li>
            <li><a class="btn efeito-fade-navbar borda-botao-search" onclick="window.location = '../Usuario/EditSecurity'" data-toggle="tab">Security</a></li>
            <li class="active"><a href="#profile" class="btn efeito-fade-navbar borda-botao-search" data-toggle="tab">Picture</a></li>
            <li><a class="btn efeito-fade-navbar borda-botao-search" onclick="window.location = '../Usuario/EditDob'" data-toggle="tab">Date of Birth</a></li>
        </ul>
        <div id="cor-borda myTabContent" class="tab-content">
            <div class="tab-pane active" id="profile">
                <form class="form-horizontal" action="~/Usuario/EditPicture" method="post" enctype="multipart/form-data">

                    <br />
                    <div class="col-lg-12">
                        @if (TempData["ErroDimensao"] != null)
                        {
                            <div class="alert alert-danger text-center col-lg-offset-2 col-lg-8 col-lg-offset-2" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                @TempData["ErroDimensao"]
                            </div>
                        }
                        else if (TempData["ErroFormato"] != null)
                        {
                            <div class="alert alert-danger text-center col-lg-offset-2 col-lg-8 col-lg-offset-2" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                @TempData["ErroFormato"]
                            </div>
                        }
                        else if (TempData["ErroTamanho"] != null)
                        {
                            <div class="alert alert-danger text-center col-lg-offset-2 col-lg-8 col-lg-offset-2" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span>
                                @TempData["ErroTamanho"]
                            </div>
                        }
                        else if (TempData["SucessoImg"] != null)
                        {
                            <div class="alert alert-success text-center" role="alert">
                                <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                                <span class="sr-only">Success:</span>
                                @TempData["SucessoImg"]
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Current Pic:</label>
                            <div class="col-sm-4 col-md-4 col-xs-4">
                                <img src="@ViewBag.ReadU.Imagem" alt="..." class="img-rounded">
                            </div>
                            <div class="col-sm-6">
                                <p class="help-block">Please select a picture with dimensions equal to 256x256.</p>
                                <p class="help-block">Formats accepted .jpg, .png and .jpeg.</p>
                                <p class="help-block">Picture must have less than 2 MiB</p>
                                @Html.TextBoxFor(m => m.Imagem, new { @type = "file", @placeholder = "Upload", @required = "required", @accept = ".png, .jpg, .jpeg" })
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <br />
                            <br />
                            <button id="cor-fonte" type="submit" class="btn cor-fonte efeito-fade-navbar center-block">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!--./well-->
</div><!--./col-lg-offset-2 col-lg-8 col-sm-12 col-md-12 col-lg-offset-2-->
