@model DisciplineTeam.Area52.Web.Models.Usuario
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<!--Começo Menu Login-->
<!--Colunas lg 4/12 md 6/12 sm 6/12-->
<div class="container col-lg-4 col-md-6 col-sm-6 thumbnail">
    <h3 class="text-center">Login to Your Account</h3>
    <hr id="borda-footer" />
    <div class="col-lg-12">
        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Erro
            </div>
        }
        <form action="/Usuario/Login" method="POST">
            <div class="input-group col-xs-12">
                <label>Email: </label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(m => m.Email)
                @*<input type="email" name="Email" class="form-control" />*@
            </div>
            
            <div class="input-group col-xs-12">
                <label>Password: </label>
                @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Senha)
                @*<input type="password" name="Senha" class="form-control" />*@
            </div>
            <br />
            <div class="col-xs-12">
                <div class="form-group col-xs-offset-2 col-xs-5">
                    <button id="cor-fonte" type="submit" class="btn cor-fonte efeito-fade-navbar borda-botao-search">Sign In</button>
                </div>
                <div class="form-group col-xs-5">
                    <a id="cor-fonte" href="/Usuario/Create" class="btn cor-fonte efeito-fade-navbar borda-botao-search">Register</a>
                </div>
            </div>
        </form>
        <br />
    </div>
</div><!--./col-lg-4 col-md-6 col-sm-6-->
<!--Fim Coluna login-->
