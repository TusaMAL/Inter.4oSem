@model DisciplineTeam.Area52.Web.Models.Jogo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Mensagem != null)
{
    <div class="alert alert-warning">
        @ViewBag.Mensagem
    </div>
}

<div class="col-lg-offset-2 col-lg-8 col-sm-12 col-md-12 col-lg-offset-2">
    <div id="cor-borda" class="panel panel-default">
        <div id="cor-fundo-header" class="panel-heading no-border">
            <a id="cor-fonte"><span class="glyphicon glyphicon-plus cor-fonte-sem-efeito">&nbsp;</span><span class="head-amigrups">Add a game</span></a>
        </div>
        <div class="panel-body no-border">
            <form action="~/Jogo/Create" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="nome">Name</label>
                    <input type="text" name="Nome" class="form-control" id="nome" placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="desc">Descrição</label>
                    <textarea name="Descricao" class="form-control textarea-sem-resize" id="desc" rows="4" required></textarea>
                </div>
                @if (TempData["ErroDimensao"] != null)
                {
                    <div class="alert alert-danger text-center col-lg-offset-2 col-lg-8 col-lg-offset-2" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @TempData["ErroDimensao"]
                    </div>
                }
                else if (TempData["ErroFormato"] != null)
                {
                    <div class="alert alert-danger text-center col-lg-offset-2 col-lg-8 col-lg-offset-2" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @TempData["ErroFormato"]
                    </div>
                }
                else if (TempData["ErroTamanho"] != null)
                {
                    <div class="alert alert-danger text-center col-lg-offset-2 col-lg-8 col-lg-offset-2" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @TempData["ErroTamanho"]
                    </div>
                }
                <div class="form-group col-lg-12">
                    <label for="imagem_jogo">Game picture:</label>
                    @Html.TextBoxFor(m => m.Imagem, new { @type = "file", @placeholder = "Name", @required="required"})
                    <p class="help-block">Please select a picture with dimensions equal to 256x256.</p>
                    <p class="help-block">Formats accepted .jpg, .png and .jpeg.</p>
                    <p class="help-block">Picture must have less than 2 MiB</p>
                </div>
                <div class="col-lg-12">
                    <section class="col-lg-offset-3">
                        <a href="~/Jogo/Index" id="cor-fonte" class="col-lg-2 center-block btn cor-fonte efeito-fade-navbar borda-botao-search">Back</a>
                        <button id="cor-fonte" class="center-block btn cor-fonte efeito-fade-navbar borda-botao-search">Add New Game</button>
                    </section>
                </div>
            </form>
        </div>
    </div>
</div>

