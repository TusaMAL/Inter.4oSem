@model DisciplineTeam.Area52.Web.Models.Mensagem
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--            Começo Menu Esquerdo            -->
<!--Cria as Coluna principal da Div-->
<div class="col-lg-2 col-sm-12 col-md-3">
    <!-- Cria a Div interior e a deixa com borda preta-->
    <div id="cor-borda" class="panel panel-default">
        <!--Aplica o fundo preto e cria o head da div-->
        <div id="cor-fundo-header" class="panel-heading no-border">
            <!-- Escritos e icones da barra preta da div-->
            <a id="cor-fonte" href="~/Grupos/Index"><span class="glyphicon glyphicon-list cor-fonte-sem-efeito">&nbsp;</span><span class="head-amigrups">Group</span></a>
        </div><!--/panel-heading-->
        <!--Div onde fica os textos do grupo-->
        <div class="list-group-item no-border">
            <a href="~/Grupo/Index/?GrupoId=@ViewBag.InfoGrupo.GIdGrupo"> <img src="~/img/csgo.png" class="img-responsive thumbnail borda-profile center-block" alt=""></a>
            <h2 class="text-center"><a href="~/Grupos/Index/?GrupoId=@ViewBag.InfoGrupo.GIdGrupo">@ViewBag.InfoGrupo.GNome</a></h2>
            <p class="text-center">@ViewBag.InfoGrupo.JNome</p>
                <!--Botão join com efeito JS-->
                    <div class="panel-body no-border">
                        <div class="row">
                            <center>
                                <div class="joined" style="display: none;">
                                    <button id="cor-fonte" class="btn cor-fonte efeito-fade-navbar borda-botao-search" type="button" onclick="$('.joined').hide(); $('.join').show()">
                                        <span class="glyphicon glyphicon-minus"></span> Leave Group
                                    </button>
                                </div>
                                <div class="join">
                                    <button id="cor-fonte" class="btn cor-fonte efeito-fade-navbar borda-botao-search" type="button" onclick="$('.join').hide(); $('.joined').show()">
                                        <span class="glyphicon glyphicon-plus"></span> Join
                                    </button>
                                </div><!--./Botão join com efeito JS-->
                                <div class="row">
                                    <br />
                                    <!--Botão create event-->
                                    <a id="cor-fonte" href="~/Evento/Create/?GrupoId=@ViewBag.InfoGrupo.GIdGrupo" class="btn cor-fonte efeito-fade-navbar">
                                        <i class="glyphicon glyphicon-flash"></i><span>&nbsp;Add New Event</span>
                                    </a>
                                </div>
                            </center>
                        </div>
                    </div>
                    
                </div>
                <!--/Botão join-->
        </div><!--/list-group-item-->
        <!--<a id="cor-fonte-menu" href="#"  class="list-group-item"><span class="badge" style="color:#00FF00;">2</span><span class="profile-text glyphicon glyphicon-ok"> Requests </span> </a><a id="cor-fonte-menu" href="#" class="list-group-item"><span class="profile-text glyphicon glyphicon-thumbs-up"> Commends</span></a>-->
</div><!--/col-lg-2 col-sm-12 col-md-3-->
<!--            Fim Menu Esquerdo               -->
<!--                Começo Feed                 -->
<!-- Começo col-lg-7 col-sm-12 col-md-6-->
<div class="col-lg-7 col-sm-12 col-md-6">
        <!-- Cria a Div interior e a deixa com borda preta-->
        <div id="cor-borda" class="panel panel-default">
            <!--Aplica o fundo preto e cria o head da div-->
            <div id="cor-fundo-header" class="panel-heading no-border">
                <!-- Escritos e icones da barra preta da div-->
                <a id="cor-fonte" data-toggle="collapse" href="#collapse1"><span class="glyphicon glyphicon-tag cor-fonte-sem-efeito">&nbsp;</span><span class="cor-fonte-sem-efeito">About</span></a>
            </div><!--/panel-heading-->
            <!-- Div com collapse ja ativado ao entrar na pagina-->
            <div id="collapse1" class="panel-body panel-collapse collapse in no-border">
                <!--começo post a esquerda-->
                <div class="col-lg-12">
                    <!--Cria thumbnail e deixa com borda preta-->
                    <div class="thumbnail borda-profile">
                        <div class="media">
                            <!--Corpo da div media -->
                            <div class="media-body">
                                <!--div alinhada verticalmente ao centro-->
                                <div class="vertical-align">
                                    <!--nome do Grupo-->
                                    <h2 class="media-heading"><a href="#" class="cor-fonte-menu">@ViewBag.InfoGrupo.GNome</a></h2>
                                    <!--Titulo de descrição-->
                                    <h4 class="">About Group:</h4>
                                </div><!--./vertical-align-->
                                <!--Descrição do grupo-->
                                <p class="text-right text-justify">@ViewBag.InfoGrupo.GDescricao</p>
                            </div><!--./media-body-->
                        </div><!--./media-->
                    </div><!--/thumbnail-->
                </div><!--/Post a esquerda-->
            </div><!--/panel-body -->
        </div><!--/panel-default -->
        <!-- Cria a Div interior e a deixa com borda-->
        <div id="cor-borda" class="panel panel-default">
            <!-- Escritos e icones da barra preta da div-->
            <div id="cor-fundo-header" class="panel-heading no-border">
            <!--Ativador do collapse data-toggle-->
                <a id="cor-fonte" data-toggle="collapse" href="#collapse2"><span class="glyphicon glyphicon-envelope cor-fonte-sem-efeito">&nbsp;</span><span class="head-amigrups">Messages</span></a>
            </div><!--/panel-heading-->
            <!-- Div com collapse ja ativado ao entrar na pagina-->
            <div id="collapse2" class="panel-body panel-collapse collapse in">
                <div class="form-group">
                    <form role="form" action="@HttpContext.Current.Request.Url.PathAndQuery" method="post">
                        @Html.TextAreaFor(m => m.Texto, new { rows = 4, @class = "form-control textarea-sem-resize", @required = "required", @placeholder = "Write something..." })
                        <br />
                        <button id="cor-fonte" type="submit" class="btn btn cor-fonte efeito-fade-navbar"><i class="glyphicon glyphicon-check">&nbsp;</i>Post New Message</button>
                    </form>
                </div><!--./form-group-->
            </div><!--./collapse-->
        </div><!--/panel-default-->
        @foreach (var e in ViewBag.ReadMensagem)
        {
        <!--Div dos posts-->
        <div id="cor-borda" class="panel-body thumbnail">
            <!--Cria o corpo da mensagem-->
            <div class="media">
                <!--Alinha a foto do post a esquerda-->
                <div class="media-left">
                    <a id="cor-fonte-menu" href="~/Usuario/User/?UserID=@e.PIdPessoa" class=""><img class="img-responsive media-object img-thumbnail borda-profile" src="~/img/img-feed/pp.jpg" alt="..."></a>
                </div>
                <!--/media-left-->
                <!--corpo div-->
                <div class="media-body">
                    <div class="vertical-align">
                        <!--Nick do Usuario q postou a msg-->
                        <h4 class="nick-post media-heading"><a href="~/Usuario/User/?UserID=@e.PIdPessoa" class="cor-fonte-menu">@e.UNick </a></h4>
                        <!--Data/Hora e grupo que foi postada a msg-->
                        <h6 class="fonte-post-pequena">@e.MsgDatahora (UTC- 03:00) at <a href="~/Grupos/Index/?GrupoId=@e.GIdGrupo" class="cor-fonte-menu">@e.GNome</a></h6>
                    </div>
                    <!--Mensagem Postada-->
                    <p class="text-right text-justify">@e.MsgTexto</p>
                </div><!--Fim post/media-body-->
            </div><!--./media-->
        </div><!--./thumbnail-->
        }
</div><!--/col-lg-7 col-sm-12 col-md-6-->
<!--Começo Members e Events-->
<!--Cria a coluna para ocupar 3/12 da pagina e ocupar toda a tela em uma resolução pequena-->
<div class="col-lg-3 col-sm-12 col-md-3">
    <!-- Cria a Div interior e a deixa com borda preta-->
    <div id="cor-borda" class="panel panel-default">
        <!-- Escritos e icones da barra preta da div-->
        <div id="cor-fundo-header" class="panel-heading no-border">
            <!-- Escritos e icones da barra preta da div-->
            <a id="cor-fonte" href="~/Grupo/Members/?GrupoId=@ViewBag.InfoGrupo.GIdGrupo"><span class="glyphicon glyphicon-star cor-fonte-sem-efeito">&nbsp;</span><span class="head-amigrups">Members (@ViewBag.QuantUserGrupos)</span></a>
        </div><!--/panel-heading-->
        <!-- Corpo do texto da div nem todas terão ele-->
        <div class="panel-body no-border">
        @foreach (var e in ViewBag.ReadPartGrupo)
        {
            <!--Coluna para caber 1 membro por linha no sm, 2 membros por linha no md e 3 membros por linha no lg-->
            <div class="col-sm-12 col-md-6 col-lg-6">
                <a id="cor-fonte-menu" href="~/Grupo/Person/?UserID=@e.PIdPessoa" class="thumbnail" title="@e.UNick">
                    <!--Anchor ou link do membro em questão-->
                    <img class="img-responsive center-block" src="~/img/akhe.jpg" alt=""><!--Img do membro-->
                    <p class="nick-friendgroup text-center fonte-responsiva-grupos-amigos text-overflow">@e.UNick</p><!--Nickname do cidadão-->
                </a>
            </div><!--/col-sm-12 col-md-6 col-lg-4-->
        }
            <!-- Coluna criada pra evitar que o See more nao fique sem ser no final da coluna-->
        @if (ViewBag.QuantUserGrupos > 6)
        {
            <div class="col-lg-12">
                <a href="~/Usuario/Members/?GrupoId=@ViewBag.InfoGrupo.GIdGrupo" class="cor-fonte-menu"><p class="text-right fonte-responsiva-grupos-amigos">See more...</p></a>
            </div><!--/col-lg-12-->
        }
            
        </div> <!--fim panel-body Members-->
    </div> <!--fim panel-default Members -->
    <!--Começo Coluna Events-->
    <div id="cor-borda" class="panel panel-default">
        <!-- Escritos e icones da barra preta da div-->
        <div id="cor-fundo-header" class="panel-heading no-border">
            <!-- Escritos e icones da barra, e ativador do collapse-->
            <a id="cor-fonte" data-toggle="collapse" href="#collapse3"><span class="glyphicon glyphicon-pushpin cor-fonte-sem-efeito">&nbsp;</span><span class="cor-fonte-sem-efeito">Events</span></a>
        </div>
        <div id="collapse3" class="panel-collapse collapse in">
            <!--Corpo da Div Events-->
            <div class="panel-body no-border">
                <!--Começo Evento-->
                <div id="cor-borda" class="thumbnail">
                    <h4><a href="~/Evento/Index">13º Amadorzão de CS:GO</a></h4>
                    <h6 class="fonte-post-pequena">15-04-2017, 00:00 (UTC- 03:00) <a href="#" class="cor-fonte-menu">Online Event</a></h6>
                </div><!--Fim Evento-->
                <!--Começo Evento-->
                <div id="cor-borda" class="thumbnail">
                    <h4><a href="">1º Campeonato Brasileiro de CS:GO</a></h4>
                    <h6 class="fonte-post-pequena">30-04-2017, 00:00 (UTC- 03:00) <a href="#" class="cor-fonte-menu">Lan Event</a></h6>
                </div><!--Fim Evento-->
            </div><!-- Fim panel-body groups -->
        </div><!--./collapse-->
    </div><!-- /panel-default Events -->
</div><!-- Fim col-lg-3 Members e Events -->
